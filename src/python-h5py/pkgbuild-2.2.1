#!/bin/bash -e

# deps
source $REPO/setenv

# FIXME AVX supported but ambiguous compilation
#export CFLAGS="-O3 -mtune=native -mno-avx"
#export FFLAGS="-O3 -mtune=native -mno-avx"

pkgname=python-h5py
pkgver=2.2.1

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/h5py-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
    mkdir -pv $tmpdir && pushd $tmpdir
    curl -O -L https://pypi.python.org/packages/source/h/h5py/h5py-${pkgver}.tar.gz
    tar xvfz h5py-$pkgver.tar.gz
    popd
}

configure()
{
    [ -d $srcdir/build ] && rm -rf $srcdir/build
    pushd $srcdir
    CC=mpicc python setup.py config --mpi
    popd
}

build()
{
    pushd $srcdir
    CC=mpicc python setup.py build --mpi
    popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  _pythonver=`python -c 'import sys; print("%d.%d" % sys.version_info[:2])'`
  mkdir -pv $destdir/lib/python$_pythonver/site-packages
  export PYTHONPATH=$destdir/lib/python$_pythonver/site-packages:$PYTHONPATH
  CC=mpicc python setup.py install --prefix=$destdir --mpi
  popd
  pushd $destdir
  cat << EOF > setenv
H5PY_DIR=\$REPO/$reldir
PATH=\$H5PY_DIR/bin:\$PATH
PYTHONPATH=\$H5PY_DIR/lib/python$_pythonver/site-packages:\$PYTHONPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

