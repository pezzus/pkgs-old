#!/bin/bash -e

source $REPO/setenv

pkgname=parmetis
pkgver=4.0.3

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O http://glaros.dtc.umn.edu/gkhome/fetch/sw/parmetis/parmetis-${pkgver}.tar.gz
  tar xvfz $pkgname-$pkgver.tar.gz
  popd
}

configure()
{
  pushd $srcdir
  make config shared=1 prefix=$destdir
  popd
}

build()
{
  pushd $srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export PARMETIS_DIR=\$REPO/$reldir
PATH=\$PARMETIS_DIR/bin:\$PATH
DYLD_LIBRARY_PATH=\$PARMETIS_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

