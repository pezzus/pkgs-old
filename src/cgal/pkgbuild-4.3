#!/bin/bash -e

source $REPO/setenv

pkgname=cgal
pkgver=4.3

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/CGAL-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L https://gforge.inria.fr/frs/download.php/32995/CGAL-${pkgver}.tar.xz
  tar xvfJ CGAL-${pkgver}.tar.xz
  popd
}

configure()
{
  [[ -d $srcdir/build ]] && rm -rf $srcdir/build
  mkdir -pv $srcdir/build && pushd $srcdir/build

  export GMP_DIR=/usr/local
  export MPFR_DIR=/usr/local
  export BOOST_ROOT=$BOOST_DIR
  export CC=gcc
  export CXX=g++
  cmake \
    -D CMAKE_INSTALL_PREFIX:PATH=$destdir \
    -D WITH_ZLIB:BOOL=ON \
    ..
  popd
}

build()
{
  pushd $srcdir/build
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir/build
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export CGAL_DIR=\$REPO/$reldir
DYLD_LIBRARY_PATH=\$CGAL_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

