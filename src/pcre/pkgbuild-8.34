#!/bin/bash -e

source $REPO/setenv
export CFLAGS="-O3 -march=native -Wa,-q"
export CXXFLAGS="-O3 -march=native -Wa,-q"

pkgname=pcre
pkgver=8.34

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/${pkgname}-${pkgver}.tar.bz2
  tar xvfj $pkgname-$pkgver.tar.bz2
  popd
}

configure()
{
  # out of source doesn't work
  pushd $srcdir
  ./configure \
    --prefix=$destdir \
    --enable-pcre{16,32} \
    --enable-jit \
    --enable-utf \
    --enable-unicode-properties
  popd
}

build()
{
  pushd $srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export PCRE_DIR=\$REPO/$reldir
PATH=\$PCRE_DIR/bin:\$PATH
MANPATH=\$PCRE_DIR/share/man:\$MANPATH
DYLD_LIBRARY_PATH=\$PCRE_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$PCRE_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

