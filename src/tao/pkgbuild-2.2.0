#!/bin/bash -e

pkgname=tao
pkgver=2.2.0

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O http://www.mcs.anl.gov/research/projects/tao/download/tao-${pkgver}.tar.gz
  tar xvfz $pkgname-$pkgver.tar.gz
  popd
}

configure()
{
  pushd $srcdir
  popd
}

build()
{
  pushd $srcdir
  export TAO_DIR=$srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  TAO_DIR=$srcdir PETSC_DIR=$REPO/tmp/petsc/petsc-3.4.3 python conf/install.py -destDir=$destdir
  popd
  pushd $destdir
  cat << EOF > setenv
export TAO_DIR=\$REPO/$reldir
DYLD_LIBRARY_PATH=\$TAO_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

#prepare
configure
build
package
#clean
