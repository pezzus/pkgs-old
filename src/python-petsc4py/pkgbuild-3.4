#!/bin/bash -e

source $REPO/setenv

pkgname=python-petsc4py
pkgver=3.4

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/petsc4py-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
    mkdir -pv $tmpdir && pushd $tmpdir
    curl -L -O https://bitbucket.org/petsc/petsc4py/downloads/petsc4py-${pkgver}.tar.gz
    tar xvfz petsc4py-${pkgver}.tar.gz
    popd
}

configure()
{
    pushd $srcdir
    python setup.py config
    popd
}

build()
{
    pushd $srcdir
    python setup.py build
    popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  _pythonver=`python -c 'import sys; print("%d.%d" % sys.version_info[:2])'`
  mkdir -pv $destdir/lib/python$_pythonver/site-packages
  export PYTHONPATH=$destdir/lib/python$_pythonver/site-packages:$PYTHONPATH
  python setup.py install --prefix=$destdir --optimize=1
  popd
  pushd $destdir
  cat << EOF > setenv
PATH=\$REPO/$reldir/bin:\$PATH
PYTHONPATH=\$REPO/$reldir/lib/python$_pythonver/site-packages:\$PYTHONPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

