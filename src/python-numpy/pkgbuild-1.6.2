#!/bin/bash -e

# deps
source $REPO/setenv

# FIXME AVX supported but ambiguous compilation
export CFLAGS="-O3 -mtune=native -mno-avx"
export FFLAGS="-O3 -mtune=native -mno-avx"
export ARCHFLAGS="-arch x86_64"
export LDFLAGS="-Wall -undefined dynamic_lookup -bundle"

pkgname=python-numpy
pkgver=1.6.2

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/numpy-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
    mkdir -pv $tmpdir && pushd $tmpdir
    curl -O -L http://downloads.sourceforge.net/numpy/numpy-${pkgver}.tar.gz
    tar xvfz numpy-$pkgver.tar.gz
    popd
}

configure()
{
    [ -d $srcdir/build ] && rm -rf $srcdir/build

    pushd $srcdir
    cat <<EOF > site.cfg
[DEFAULT]
library_dirs = $OPENBLAS_DIR/lib:$SUITESPARSE_DIR/lib
include_dirs = $OPENBLAS_DIR/include:$SUITESPARSE_DIR/include
EOF

    python setup.py config

    popd
}

build()
{
    pushd $srcdir
    python setup.py build
    popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  _pythonver=`python -c 'import sys; print("%d.%d" % sys.version_info[:2])'`
  mkdir -pv $destdir/lib/python$_pythonver/site-packages
  export PYTHONPATH=$destdir/lib/python$_pythonver/site-packages:$PYTHONPATH
  python setup.py install --prefix=$destdir --optimize=1
  popd
  pushd $destdir
  cat << EOF > setenv
NUMPY_DIR=\$REPO/$reldir
PATH=\$NUMPY_DIR/bin:\$PATH
PYTHONPATH=\$NUMPY_DIR/lib/python$_pythonver/site-packages:\$PYTHONPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

