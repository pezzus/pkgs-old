#!/bin/bash -e

pkgname=openblas
pkgver=0.2.8

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/OpenBLAS-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
    mkdir -pv $tmpdir && pushd $tmpdir
    curl -O -L http://github.com/xianyi/OpenBLAS/archive/v${pkgver}.tar.gz
    tar xvfz v$pkgver.tar.gz
    popd
}

configure() 
{
    pushd $srcdir
    popd
}

build()
{
    pushd $srcdir
    make all
    popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make PREFIX=$destdir install
  popd
  pushd $destdir
  cat << EOF > setenv
export OPENBLAS_DIR=\$REPO/$reldir
DYLD_LIBRARY_PATH=\$OPENBLAS_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

