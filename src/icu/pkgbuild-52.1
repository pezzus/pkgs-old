#!/bin/bash -e

source $REPO/opt/gcc-4.8.2/setenv
export PATH

pkgname=icu
pkgver=52.1
_pkgver=${pkgver//./_}
tmpdir=$REPO/tmp/$pkgname
srcdir="$tmpdir/$pkgname/source"
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L "http://download.icu-project.org/files/icu4c/${pkgver}/icu4c-${_pkgver}-src.tgz"
  tar xvfz icu4c-${_pkgver}-src.tgz
  popd
}

configure()
{
    [[ -d $srcdir/build ]] && rm -rf $srcdir/build
    mkdir -pv $srcdir/build && pushd $srcdir/build

    ../configure \
        CC=gcc \
        CXX=g++ \
        --prefix=$destdir \
        --mandir=$destdir/share/man \
        --sbindir=$destdir/bin

    popd
}

build()
{
  pushd $srcdir/build
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir/build
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export ICU_DIR=\$REPO/$reldir
PATH=\$ICU_DIR/bin:\$PATH
MANPATH=\$ICU_DIR/share/man:\$MANPATH
DYLD_LIBRARY_PATH=\$ICU_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$ICU_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

