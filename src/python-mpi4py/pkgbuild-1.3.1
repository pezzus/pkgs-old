#!/bin/bash -e

# deps
source $REPO/setenv

# FIXME AVX supported but ambiguous compilation
#export CFLAGS="-O3 -mtune=native -mno-avx"
#export FFLAGS="-O3 -mtune=native -mno-avx"

pkgname=python-mpi4py
pkgver=1.3.1

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/mpi4py-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
    mkdir -pv $tmpdir && pushd $tmpdir
    curl -O -L https://bitbucket.org/mpi4py/mpi4py/downloads/mpi4py-${pkgver}.tar.gz
    tar xvfz mpi4py-${pkgver}.tar.gz
    popd
}

configure()
{
    [ -d $srcdir/build ] && rm -rf $srcdir/build
    pushd $srcdir
    CC=mpicc python setup.py config
    popd
}

build()
{
    pushd $srcdir
    CC=mpicc python setup.py build
    popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  _pythonver=`python -c 'import sys; print("%d.%d" % sys.version_info[:2])'`
  mkdir -pv $destdir/lib/python$_pythonver/site-packages
  export PYTHONPATH=$destdir/lib/python$_pythonver/site-packages:$PYTHONPATH
  CC=mpicc python setup.py install --prefix=$destdir
  popd
  pushd $destdir
  cat << EOF > setenv
MPI4PY_DIR=\$REPO/$reldir
PATH=\$MPI4PY_DIR/bin:\$PATH
PYTHONPATH=\$MPI4PY_DIR/lib/python$_pythonver/site-packages:\$PYTHONPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

