#!/bin/bash -e

pkgname=mc
pkgver=4.8.10

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://www.midnight-commander.org/downloads/${pkgname}-${pkgver}.tar.bz2
  tar xvfj $pkgname-$pkgver.tar.bz2
  popd
}

configure()
{
  # out of source doesn't work
  pushd $srcdir
  ./configure \
    --prefix=$destdir

  popd
}

build()
{
  pushd $srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export SLANG_DIR=\$REPO/$reldir
PATH=\$SLANG_DIR/bin:\$PATH
MANPATH=\$SLANG_DIR/share/man:\$MANPATH
DYLD_LIBRARY_PATH=\$SLANG_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$SLANG_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

