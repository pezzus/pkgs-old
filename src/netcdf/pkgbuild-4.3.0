#!/bin/bash -e

source $REPO/setenv
export HDF5_DIR=/usr/local

pkgname=netcdf
pkgver=4.3.0

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://www.unidata.ucar.edu/downloads/netcdf/ftp/netcdf-${pkgver}.tar.gz
  tar xvfz $pkgname-$pkgver.tar.gz
  popd
}

configure()
{
  [[ -d $srcdir/build ]] && rm -rf $srcdir/build
  mkdir -pv $srcdir/build && pushd $srcdir/build

  ../configure \
    CC=mpicc \
    FC=mpif90 \
    CXX=mpicxx \
    --prefix=$destdir \
    --enable-shared \
    --enable-netcdf-4 \
    CPPFLAGS="-I$HDF5_DIR/include" \
    LDFLAGS="-L$HDF5_DIR/lib"
    
  popd
}

build()
{
  pushd $srcdir/build
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir/build
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export NETCDF_DIR=\$REPO/$reldir
PATH=\$NETCDF_DIR/bin:\$PATH
MANPATH=\$NETCDF_DIR/share/man:\$MANPATH
DYLD_LIBRARY_PATH=\$NETCDF_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

