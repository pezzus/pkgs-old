#!/bin/bash -e

pkgname=libffi
pkgver=3.0.13

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O http://mirrors.kernel.org/sources.redhat.com/libffi/libffi-$pkgver.tar.gz
  tar xvfz $pkgname-$pkgver.tar.gz
  pushd $srcdir
  patch -Np1 -i $REPO/src/libffi/libffi-3.0.13-includedir-1.patch
  popd
  popd
}

configure()
{
  [[ -d $srcdir/build ]] && rm -rf $srcdir/build
  mkdir -pv $srcdir/build && pushd $srcdir/build

  ../configure \
    --build="x86_64-apple-darwin12.4.0" \
    --prefix=$destdir \
    --libdir=$destdir/lib \
    --includedir=$destdir/include \
    --oldincludedir=$destdir/include \
    --disable-dependency-tracking

  popd
}

build()
{
  pushd $srcdir/build
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir

  mkdir -pv $destdir/lib
  pushd $destdir
  ln -sfv lib lib64
  popd

  # install new one
  pushd $srcdir/build
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export LIBFFI_DIR=\$REPO/$reldir
DYLD_LIBRARY_PATH=\$LIBFFI_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$LIBFFI_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
MANPATH=\$LIBFFI_DIR/share/man:\$MANPATH
INFOPATH=\$LIBFFI_DIR/share/info:\$INFOPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

prepare
configure
build
package
clean
