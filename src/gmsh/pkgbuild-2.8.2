#!/bin/bash -e

pkgname=gmsh
pkgver=2.8.2

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/gmsh-$pkgver-source
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://geuz.org/gmsh/src/gmsh-$pkgver-source.tgz
  tar xvfz gmsh-$pkgver-source.tgz
  popd
}

configure()
{
  [[ -d $srcdir/build ]] && rm -rf $srcdir/build
  mkdir -pv $srcdir/build && pushd $srcdir/build

  _pythonbase="/usr/local/Frameworks/Python.framework/Versions/Current"

  cmake \
    -D CMAKE_INSTALL_PREFIX:PATH=$destdir \
    -D ENABLE_WRAP_PYTHON:BOOL=ON \
    -D ENABLE_MPI:BOOL=ON \
    -D CMAKE_BUILD_TYPE:STRING="Release" \
    -D ENABLE_BUILD_DYNAMIC:BOOL=ON \
    -D ENABLE_BUILD_LIB:BOOL=ON \
    -D ENABLE_BUILD_SHARED:BOOL=ON \
    -D PYTHON_LIBRARY="${_pythonbase}/lib/libpython2.7.dylib" \
    -D PYTHON_INCLUDE_DIR="${_pythonbase}/include/python2.7" \
    ../
 
  popd
}

build()
{
  pushd $srcdir/build
  make -j5
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir/build
  _pythonver=`python2 -c 'import sys; print("%d.%d" % sys.version_info[:2])'`
  mkdir -pv $destdir/lib/python$_pythonver/site-packages
  export PYTHONPATH=$destdir/lib/python$_pythonver/site-packages:$PYTHONPATH
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export GMSH_DIR=\$REPO/$reldir
PATH=\$GMSH_DIR/bin:\$PATH
PYTHONPATH=\$GMSH_DIR/lib/python$_pythonver/site-packages:\$PYTHONPATH
PKG_CONFIG_PATH=\$GMSH_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
DYLD_LIBRARY_PATH=\$GMSH_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

