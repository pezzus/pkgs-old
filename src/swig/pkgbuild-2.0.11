#!/bin/bash -e

# deps
source $REPO/setenv

export CFLAGS="-O3 -mtune=native -fno-strict-aliasing -Wa,-q"
export CXXLAGS="-O3 -mtune=native -fno-strict-aliasing -Wa,-q"

pkgname=swig
pkgver=2.0.11

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz
  tar xvfz $pkgname-$pkgver.tar.gz
  popd
}

configure()
{
  # out of source doesn't work
  pushd $srcdir
  ./configure \
    --prefix=$destdir \
    --with-pcre-prefix=$PCRE_DIR \
    --with-boost=$BOOST_DIR \
    --without-{java,perl5}
  popd
}

build()
{
  pushd $srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
SWIG_DIR=\$REPO/$reldir
PATH=\$SWIG_DIR/bin:\$PATH
MANPATH=\$SWIG_DIR/share/man:\$MANPATH
LD_LIBRARY_PATH=\$SWIG_DIR/lib:\$LD_LIBRARY_PATH
PKG_CONFIG_PATH=\$SWIG_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

