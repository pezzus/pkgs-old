#!/bin/bash -e

source $REPO/setenv

pkgname=valgrind
pkgver=3.9.0

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://valgrind.org/downloads/${pkgname}-${pkgver}.tar.bz2
  tar xvfj $pkgname-$pkgver.tar.bz2
  popd
}

configure()
{
  pushd $srcdir

  ./configure \
    --prefix=$destdir \
    --mandir=$destdir/share/man \
    --enable-only64bit
  popd
}

build()
{
  pushd $srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
PATH=\$REPO/$reldir/bin:\$PATH
MANPATH=\$REPO/$reldir/share/man:\$MANPATH
INFOPATH=\$REPO/$reldir/share/info:\$INFOPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

