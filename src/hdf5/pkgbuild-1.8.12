#!/bin/bash -e

# deps
source $REPO/opt/gcc-4.8.2/setenv
source $REPO/opt/openmpi-1.7.3/setenv
export PATH

pkgname=hdf5
pkgver=1.8.12

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://www.hdfgroup.org/ftp/HDF5/current/src/hdf5-${pkgver}.tar.bz2
  tar xvfj $pkgname-${pkgver}.tar.bz2
  popd

  pushd $srcdir
  patchdir=$REPO/src/${pkgname}
  patch -Np1 -i $patchdir/hdf5-1.8.10-buildsystem.patch
  patch -Np1 -i $patchdir/hdf5-1.8.10-implicits.patch
  patch -Np1 -i $patchdir/hdf5-1.8.8-array_bounds.patch
  patch -Np1 -i $patchdir/hdf5-1.8.9-mpicxx.patch
  popd
}

configure()
{
  [[ -d $srcdir/build ]] && rm -rd $srcdir/build
  mkdir -pv $srcdir/build && pushd $srcdir/build

  # enable shared libs by default for h5cc config utility
  sed -i -e "s/SHLIB:-no/SHLIB:-yes/g" ../tools/misc/h5cc.in

  ../configure \
    CXX="mpicxx" \
    CC="mpicc" \
    FC="mpif90" \
    F9X="mpif90" \
    RUNPARALLEL="mpirun" \
    OMPI_MCA_disable_memory_allocator=1 \
    --host="x86_64-apple-darwin13.0.0" \
    --target="x86_64-apple-darwin13.0.0" \
    --prefix=$destdir \
    --with-pthread=/usr/lib/ \
    --enable-linux-lfs \
    --enable-unsupported \
    --enable-shared \
    --disable-static \
    --with-zlib=/usr \
    --enable-filters=all \
    --enable-production=yes \
    --with-default-api-version=v18 \
    --enable-parallel=yes \
    --enable-cxx \
    --disable-sharedlib-rpath

  popd
}

build()
{
  pushd $srcdir/build
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir

  # install new one
  pushd $srcdir/build
  make install
  popd

  pushd $destdir
  cat << EOF > setenv
export HDF5_DIR=\$REPO/$reldir
PATH=\$HDF5_DIR/bin:\$PATH
DYLD_LIBRARY_PATH=\$HDF5_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

