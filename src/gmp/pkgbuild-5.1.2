#!/bin/bash -e

pkgname=gmp
pkgver=5.1.2

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O ftp://ftp.gmplib.org/pub/gmp-${pkgver}/gmp-${pkgver}.tar.bz2
  tar xvfj $pkgname-$pkgver.tar.bz2
  popd
}

configure()
{
  [[ -d $srcdir/build ]] && rm -rf $srcdir/build
  mkdir -pv $srcdir/build && pushd $srcdir/build
  
  ../configure \
    --prefix=$destdir \
    --enable-cxx
  popd
}

build()
{
  pushd $srcdir/build
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir/build
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export GMP_DIR=\$REPO/$reldir
INFOPATH=\$GMP_DIR/share/info:\$INFOPATH
DYLD_LIBRARY_PATH=\$GMP_DIR/lib:\$DYLD_LIBRARY_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

prepare
configure
build
package
clean
