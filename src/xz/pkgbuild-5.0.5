#!/bin/bash -e

pkgname=xz
pkgver=5.0.5

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O http://tukaani.org/${pkgname}/${pkgname}-${pkgver}.tar.gz
  tar xvfz $pkgname-$pkgver.tar.gz
  popd
}

configure()
{
  # out of source doesn't work
  pushd $srcdir
  ./configure \
    --prefix=$destdir \
    --disable-rpath \
    --enable-werror
  popd
}

build()
{
  pushd $srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
XZ_DIR=\$REPO/$reldir
PATH=\$XZ_DIR/bin:\$PATH
MANPATH=\$XZ_DIR/share/man:\$MANPATH
DYLD_LIBRARY_PATH=\$XZ_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$XZ_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

prepare
configure
build
package
clean
