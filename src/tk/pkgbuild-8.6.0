#!/bin/bash -e

pkgname=tk
pkgver=8.6.0

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname$pkgver/unix
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://downloads.sourceforge.net/sourceforge/tcl/tk${pkgver}-src.tar.gz
  tar xvfz $pkgname$pkgver-src.tar.gz
  popd
}

configure()
{
  pushd $srcdir
  CFLAGS="${CFLAGS} -I$TCL_DIR/include" \
  CXXFLAGS="${CXXFLAGS} -I$TCL_DIR/include" \
  LDFLAGS="${LDFLAGS} -L$TCL_DIR/lib" \
  ./configure \
    CPPFLAGS="-I/opt/X11/include" \
    LDFLAGS="-L/opt/X11/lib" \
    --prefix=$destdir \
    --mandir=$destdir/share/man \
    --enable-threads \
    --enable-64bit \
    --with-tcl=$TCL_DIR/lib \
    --with-x

  popd
}

build()
{
  pushd $srcdir
  make
  #make test
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install install-private-headers
  popd
  pushd $destdir
  
  find "$destdir" -name '*.a' -type f -exec chmod 644 {} \;
  ln -sf wish8.6 "${destdir}/bin/wish"

  cat << EOF > setenv
export TK_DIR=\$REPO/$reldir
PATH=\$TCL_DIR/bin:\$PATH
DYLD_LIBRARY_PATH=\$TCL_DIR/bin:\$DYLD_LIBRARY_PATH
MANPATH=\$TCL_DIR/share/man:\$MANPATH
PKG_CONFIG_PATH=\$TCL_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

prepare
configure
build
package
clean
