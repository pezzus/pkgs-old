#!/bin/bash -e

pkgname=expat
pkgver=2.1.0

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://downloads.sourceforge.net/sourceforge/expat/${pkgname}-${pkgver}.tar.gz
  tar xvfz $pkgname-$pkgver.tar.gz
  popd
}

configure()
{
    mkdir -pv $srcdir/build && pushd $srcdir/build

    ../configure \
        CC=$LOCALGCC/bin/gcc \
        CXX=$LOCALGCC/bin/g++ \
        --prefix=$destdir
  
    popd
}

build()
{
    pushd $srcdir/build
    make
    popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir/build
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
export LIBEXPAT_DIR=\$REPO/$reldir
PATH=\$LIBEXPAT_DIR/bin:\$PATH
DYLD_LIBRARY_PATH=\$LIBEXPAT_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$LIBEXPAT_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
MANPATH=\$LIBEXPAT_DIR/share/man:\$MANPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

