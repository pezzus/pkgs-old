#!/bin/bash -e

# deps

#source $REPO/opt/readline-6.2/setenv
#export MACOSX_DEPLOYMENT_TARGET=10.9

#source $REPO/setenv

unset PYTHONHOME
unset PYTHONPATH

pkgname=python
pkgver=2.7.6

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/Python-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://www.python.org/ftp/python/${pkgver%rc?}/Python-${pkgver}.tar.xz
  tar xvfJ Python-${pkgver}.tar.xz
  popd
}

configure()
{
    [ -d "$srcdir/build" ] && rm -rf $srcdir/build
    mkdir -pv $srcdir/build && pushd $srcdir/build

    ../configure \
        --prefix=$destdir \
        --enable-ipv6 \
        --datarootdir=$destdir/share \
        --datadir=$destdir/share \
        --without-gcc

    popd
}

build()
{
    pushd $srcdir/build
    make
    popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir

  # install new one
  pushd $srcdir/build
  make install
  popd

  pushd $destdir
  cat << EOF > setenv
export PYTHON_DIR=\$REPO/$reldir
PATH=\$PYTHON_DIR/bin:\$PATH
DYLD_LIBRARY_PATH=\$PYTHON_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$PYTHON_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
MANPATH=\$PYTHON_DIR/share/man:\$MANPATH
INFOPATH=\$PYTHON_DIR/share/info:\$INFOPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

