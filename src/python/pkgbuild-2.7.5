#!/bin/bash -e

pkgname=python
pkgver=2.7.5

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/Python-$pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://www.python.org/ftp/python/${pkgver%rc?}/Python-${pkgver}.tar.xz
  tar xvfJ Python-$pkgver.tar.xz
  popd

  pushd $srcdir

  # Enable built-in SQLite module to load extensions (fix FS#22122)
  #sed "/SQLITE_OMIT_LOAD_EXTENSION/d" > setup.py

  rm -r Modules/expat
  rm -r Modules/zlib
  rm -r Modules/_ctypes/{darwin,libffi}*
  popd

}

configure()
{
  mkdir -pv $srcdir/build && pushd $srcdir/build

  CPPFLAGS="-I$TCL_DIR/include -I/opt/X11/include -I$TK_DIR/include -I$LIBFFI_DIR/include -I$LIBEXPAT_DIR/include" \
  LDFLAGS="-L$TCL_DIR/lib -L/opt/X11/lib -L$TK_DIR/lib -L$LIBFFI_DIR/lib -L$LIBEXPAT_DIR/lib" \
  ../configure \
    --prefix=$destdir \
    --datarootdir=$destdir/share \
    --datadir=$destdir/share \
    --enable-shared \
    --with-threads \
    --enable-unicode=ucs4 \
    --with-system-expat \
    --with-system-ffi \
    --with-dbmliborder=gdbm:ndbm
  popd
}

build()
{
  pushd $srcdir/build
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir

  # install new one
  pushd $srcdir/build
  make install
  popd

  pushd $destdir
  cat << EOF > setenv
export PYTHON_DIR=\$REPO/$reldir
PATH=\$PYTHON_DIR/bin:\$PATH
DYLD_LIBRARY_PATH=\$PYTHON_DIR/lib:\$DYLD_LIBRARY_PATH
PKG_CONFIG_PATH=\$PYTHON_DIR/lib/pkgconfig:\$PKG_CONFIG_PATH
MANPATH=\$PYTHON_DIR/share/man:\$MANPATH
INFOPATH=\$PYTHON_DIR/share/info:\$INFOPATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

