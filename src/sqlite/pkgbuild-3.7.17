#!/bin/bash -e

pkgname=sqlite
pkgver=3.7.17
_pkgver=3071700

tmpdir=$REPO/tmp/$pkgname
srcdir=$tmpdir/$pkgname-autoconf-$_pkgver
reldir=opt/$pkgname-$pkgver
destdir=$REPO/$reldir

prepare()
{
  mkdir -pv $tmpdir && pushd $tmpdir
  curl -O -L http://www.sqlite.org/2013/sqlite-autoconf-$_pkgver.tar.gz
  tar xvfz $pkgname-autoconf-$_pkgver.tar.gz
  popd
}

configure()
{
  pushd $srcdir
  CPPFLAGS="-DSQLITE_ENABLE_RTREE -DSQLITE_ENABLE_FTS3 -DSQLITE_ENABLE_FTS3_PARENTHESIS -DSQLITE_ENABLE_COLUMN_METADATA -DSQLITE_ENABLE_STAT3 -I$READLINE_DIR/include" \
  LDFLAGS="-L$READLINE_DIR/lib" \
  ./configure \
    --build="x86_64-apple-darwin12.4.0" \
    --prefix=$destdir \
    --disable-static \
    --disable-dependency-tracking \
    --enable-dynamic-extensions
  popd
}

build()
{
  pushd $srcdir
  make
  popd
}

package()
{
  # remove old installation
  [ -d $destdir ] && rm -rfv $destdir
  # install new one
  pushd $srcdir
  make install
  popd
  pushd $destdir
  cat << EOF > setenv
PATH=\$REPO/$reldir/bin:\$PATH
DYLD_LIBRARY_PATH=\$REPO/$reldir/lib:\$DYLD_LIBRARY_PATH
MANPATH=\$REPO/$reldir/share/man:\$MANPATH
PKG_CONFIG_PATH=\$REPO/$reldir/lib/pkgconfig:\$PKG_CONFIG_PATH
EOF
  popd
}

clean()
{
  rm -rfv $tmpdir
}

prepare
configure
build
package
clean
