#!/bin/bash

export REPO=$HOME/fenics/pkgs

export PATH=$PATH:/usr/local/cuda/bin
export DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:/usr/local/cuda/lib

setpkg()
{
  echo "Setting $1-$2 ..."
  pkgdir=$REPO/opt/$1-$2
  if [ ! -d "$pkgdir" ]; then
    echo "!!! Package not found"
    return
  fi
  source $pkgdir/setenv
}

setpkg suitesparse 4.2.1
setpkg superlu 4.3
setpkg superlu_dist 3.3
setpkg scalapack 2.0.2
setpkg scotch 6.0.0
setpkg mumps 4.10.0
setpkg hypre 2.9.1a
setpkg pastix 5.2.1
setpkg trilinos 11.4.2

setpkg petsc 3.4.3
setpkg python-petsc4py dev

setpkg arpack dev
setpkg slepc 3.4.3

setpkg tao 2.2.0

setpkg vtk 5.10.1
setpkg opencascade dev
setpkg gmsh 2.8.3

setpkg python-ufl dev
setpkg python-uflacs dev
setpkg python-ffc dev
setpkg python-fiat dev
setpkg python-instant dev
setpkg python-ufc dev
setpkg dolfin dev

export PATH=${PATH%:}
export DYLD_LIBRARY_PATH=${DYLD_LIBRARY_PATH%:}
export DYLD_FRAMEWORK_PATH=${DYLD_FRAMEWORK_PATH%:}
export INFOPATH=${INFOPATH%:}
export MANPATH=${MANPATH%:}
export PKG_CONFIG_PATH=${PKG_CONFIG_PATH%:}
export PYTHONPATH=${PYTHONPATH%:}

