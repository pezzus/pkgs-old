setpkg expat 2.1.0
setpkg gdbm 1.10
setpkg tcl 8.6.0
setpkg tk 8.6.0
setpkg sqlite 3.7.17
setpkg python 2.7.5
setpkg valgrind 3.8.1
setpkg openmpi 1.6.5
setpkg icu 51.2
